<icecast>
  <limits>
    <clients>100</clients>
    <sources>2</sources>
    <queue-size>524288</queue-size>
    <client-timeout>30</client-timeout>
    <header-timeout>15</header-timeout>
  </limits>

  <authentication>
    <source-password>streampass</source-password>
    <admin-user>admin</admin-user>
    <admin-password>adminpass</admin-password>
  </authentication>

  <hostname>one41radio.onrender.com</hostname>

  <listen-socket>
    <port>8000</port>
  </listen-socket>

  <fileserve>1</fileserve>

  <paths>
    <basedir>/usr/share/icecast</basedir>
    <logdir>/usr/share/icecast/log</logdir>
    <webroot>/usr/share/icecast/web</webroot>
    <adminroot>/usr/share/icecast/admin</adminroot>
  </paths>

  <!-- Added this to define a mount point for streaming -->
  <mount>
    <mount-name>/stream</mount-name>
    <max-listeners>100</max-listeners>
  </mount>

  <!-- These help eliminate warnings -->
  <location>Cape Town, South Africa</location>
  <admin>shepherdphiri88@gmail.com</admin>
</icecast>
